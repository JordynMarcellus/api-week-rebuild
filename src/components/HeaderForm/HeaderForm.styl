.header-form 
    background-image: linear-gradient(to top, #37ecba 0%, #72afd3 100%);
    display: flex;
    flex-direction: column;
    h1, h2
        text-align: center

.header-form__form-element 
    align-content: center;
    justify-content: center
    text-align: center
    input
        display: block
        margin: 0.5em auto
    input.header-form__text-input
        width: 15em
        border-radius: 3px
        border-style: none
        padding: 0.5em
    label
        display: block
    .btn 
        margin: 0 0.5em